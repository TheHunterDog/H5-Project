<Window x:Class="WPF.ShowLeerdoelenTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="ShowLeerdoelenTable" Height="450" Width="800">
    <DataGrid>
        <DataGrid.Columns> 
           
            <DataGridTextColumn x:Name="StudentNumber" Binding ="{Binding Studentnummer}" Header="studentID" IsReadOnly="TRUE" />

            <DataGridTextColumn x:Name="Firstname" Binding ="{Binding Voornaam}" Header="Firstname" IsReadOnly="TRUE" Width="100"/>

            <DataGridTextColumn x:Name="Midname" Binding ="{Binding Tussenvoegsel}" Header="Midname" IsReadOnly="TRUE" Width="100" />

            <DataGridTextColumn x:Name="Lastname" Binding ="{Binding Achternaam}" Header="Lastname" IsReadOnly="TRUE" Width="100" />

            <DataGridTextColumn x:Name="Leerdoelen" Binding ="{Binding Leerdoel}" Header="Learning goal" IsReadOnly="TRUE" Width="400"/>
            
        </DataGrid.Columns>
    </DataGrid> 
</Window>
