<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="800"
        SizeChanged="FrameworkElement_OnSizeChanged">
    <Grid Height="450" Width="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button 
            Width="100" 
            Height="20" 
            HorizontalAlignment="Left"
            Margin="20,0,0 0"
            x:Name="Button1"
            Content="Open Window" 
            Click="Click"/>

        <Button 
            Grid.Row="1"
            Width="150" 
            Height="20" 
            HorizontalAlignment="Right"
            Margin="0,0,20 0"
            x:Name="BtnPlan" 
            Content="Gesprek inplannen"
            Click="ButtonPlanIn_Click"/>
        <Button 
            Width="100" 
            Height="20" 
            HorizontalAlignment="Left"
            Margin="360,60,0,370"
            x:Name="Button3"
            Content="Importeren studenten" Click="ButtonImportStudents_Click" />
        <Button 
            Width="150" 
            Height="20" 
            x:Name="Leerdoelen" 
            Content="Leerdoelen"
            Grid.Column="1"
            Click="Leerdoelen_OnClick"/>
        <Button 
            Width="150" 
            Height="20" 
            Grid.Column="1"
            Grid.Row="1"
            
            x:Name="LeerdoelenToevoegen" 
            Content="Leerdoelen Toevoegen"
            Click="LeerdoelenToevoegen_OnClick"/>
    </Grid>
</Window>
